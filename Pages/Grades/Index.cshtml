@page
@model Contoso.Pages.Grades.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].GradeValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Grade) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GradeValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GradeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GradeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GradeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
